@using Elearning.Models

@{
    ViewData["Title"] = "Create";
}
@model Courses
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Course Created</h4>
            <form class="forms-sample" asp-controller="Course" asp-action="Create" asp-area="AdminPanel" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="ImageFile">Image</label>
                    <input  class="form-control" asp-for="ImageFile" placeholder="Image">
                    <span asp-validation-for="ImageFile"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input type="text" class="form-control" asp-for="Price" placeholder="Price">
                    <span asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TeacherId">Teacher</label>
                    <select  class="bootstrap-select" asp-for="TeacherId"  asp-items="new SelectList(ViewBag.Teacher,nameof(Teacher.Id),nameof(Teacher.Name))" placeholder="Teacher"></select>
                    <span asp-validation-for="TeacherId"></span>
                </div>
                <div asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light" asp-action="Index">Cancel</button>
            </form>
        </div>
    </div>
</div>

