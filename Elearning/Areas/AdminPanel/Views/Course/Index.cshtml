@using Elearning.Models
@using Elearning.ViewModels

@{
    ViewData["Title"] = "Index";
    int count = ((Model.CurrentPage - 1) * 3) + 1;
}

@model PaginateVM<Courses>
<div>
    <a class="btn btn-success" asp-controller="Course" asp-action="Create">Create</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Course table</h4>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                               Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                               Teacher
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Edit
                            </th>
                            <th>
                                Delete
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @(count++)
                                </td>
                                <td>
                                    <img src="~/assets/img/@item.Image" />
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Teacher.Name
                                </td>
                                <td>
                                   @item.Price
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </td>
                             
                            </tr>
                        }
                    </tbody>
                </table>
                <nav aria-label="...">
  <ul class="pagination pagination-lg">
   @for (int i = 1; i <=Model.PageCount; i++)
                        {
                            <li class="page-item @(Model.CurrentPage==i?"active":"")">
                                <a class="page-link" tabindex="-1" asp-controller="Course" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }
  </ul>
</nav>
            </div>
        </div>
    </div>
</div>

